@model IEnumerable<UrlViewModel>

<table>
    <tr>
        <th>Full link</th>
        <th>Short link</th>
        <th>Date create</th>
        <th>Jump counter</th>
        <th></th>
    </tr>
    
    

    @foreach (var item in @Model)
    {
        <tr>
            <td>
                <div class="card-body">
                    @item.FullUrl
                </div>
            </td>
            <td>
                <div class="card-body">
                    <a asp-controller="Url" asp-action="JumpCounter" asp-route-shortUrl="@item.ShortUrl" type="text">@item.ShortUrl</a>
                </div>
            </td>
            <td>
                <div class="card-body">
                    @item.DateCreated
                </div>
            </td>
            <td>
                <div class="card-body">
                    @item.JumpCounter
                </div>
            </td>
            <td>
                <article-buttons-block>
                    <a class="btn btn-warning" asp-controller="Url" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Url" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </article-buttons-block>
            </td>
        </tr>
    }
</table>

<div class="shadowbox">
    <a asp-controller="Url" asp-action="Create" class="btn btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
            <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0zM9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1zM8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0z"></path>
        </svg>
    </a>
</div>