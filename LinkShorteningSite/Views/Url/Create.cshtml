@model UrlCreateViewModel

<div class="container">
    <h2>Create Order</h2>
    <div class="row gx-5">
        <form asp-controller="Url" asp-action="Create" asp-antiforgery="true" method="post">
            <div>
                <div class="mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="FullUrl"></label>
                    <input class="form-control" type="text" asp-for="FullUrl">
                </div>

                <div class="mb-3">
                    <label class="col-sm-2 col-form-label" asp-for="DateCreated"></label>
                    <input type="datetime-local" class="form-control" asp-for="DateCreated">
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
